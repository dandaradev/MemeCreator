<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovoTextoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Texto"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Texto Superior -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto Superior"
            app:layout_constraintTop_toBottomOf="@id/textView18"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etTextoSuperior"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Mensagem"
            app:layout_constraintTop_toBottomOf="@id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cor do texto"
            app:layout_constraintTop_toBottomOf="@id/etTextoSuperior"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etCorSuperior"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ex: WHITE"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamanho do texto"
            app:layout_constraintTop_toBottomOf="@id/etCorSuperior"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etTamanhoSuperior"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ex: 20"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Texto Inferior -->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto Inferior"
            app:layout_constraintTop_toBottomOf="@id/etTamanhoSuperior"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etTextoInferior"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Mensagem"
            app:layout_constraintTop_toBottomOf="@id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cor do texto"
            app:layout_constraintTop_toBottomOf="@id/etTextoInferior"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etCorInferior"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ex: WHITE"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamanho do texto"
            app:layout_constraintTop_toBottomOf="@id/etCorInferior"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etTamanhoInferior"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ex: 20"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão -->
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:onClick="enviarNovoTexto"
            app:layout_constraintTop_toBottomOf="@id/etTamanhoInferior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>